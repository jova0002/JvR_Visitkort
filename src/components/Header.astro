---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<header x-data="{ showmenu: false }" class="bg-primary-pink">
  <div id="navbar" class="container mx-auto p-3 flex flex-row justify-between items-center">
    <div id="logo" class="">
      <!-- <a href="#" class="font-p text-xl">Astro-Tailwind starter - udvidet udgave E25</a> -->
    </div>
    <nav id="desktopmenu" class="hidden lg:block text-m">
      <ul class="flex flex-row gap-4 font-p">
        <li class="pr-7"><a href="/" class={currentPath === "" ? "underline" : ""}>Home</a></li><!-- alternativt: lav et <a href="">Link</a>, hvis du ikke vil bruge Link.astro komponenten -->

        <!-- anchor link -->
        <li class="font-p pt-0.2 pr-7"><a href="#About" class={currentPath === "#About" ? "underline" : ""}>About</a></li>
        <li class="font-p pt-0.2 pr-7"><a href="#Skills" class={currentPath === "#Skills" ? "underline" : ""}>Skills</a></li>
        <li class="font-p pt-0.2 pr-7"><a href="#Inspo" class={currentPath === "#Inspo" ? "underline" : ""}>Inspo</a></li>
        <!-- ... -->

        <li class="font-p pt-0.2"><a href="/komponentbibliotek/" class={currentPath === "komponentbibliotek/" ? "underline" : ""}>Components</a></li>
      </ul>
    </nav>
    <button id="burgermenu" class="lg:hidden font-p" x-on:click="showmenu = ! showmenu"
      ><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-7">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
      </svg>
    </button>
  </div>
  <nav id="mobilmenu" class="flex flex-col content-center" x-show="showmenu" x-transition x-on:click="showmenu = false" x-on:click.outside="showmenu = false">
    <ul class="border-t-2 border-b-2 border-secondary-pink">
      <li class="text-center py-2 font-p"><a href="/" class={currentPath === "" ? "underline" : ""}>Home</a></li>
      <li class="text-center py-2 font-p"><a href="/index.astro/" class={currentPath === "#About" ? "underline" : ""}>About</a></li>
      <li class="text-center py-2 font-p"><a href="/komponentbibliotek/" class={currentPath === "komponentbibliotek/" ? "underline" : ""}>Komponentbibliotek</a></li>
    </ul>
  </nav>
</header>
