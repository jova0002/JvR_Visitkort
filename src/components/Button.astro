---
// Get parameters from Astro.props
const { variant = "primary", size = "medium" } = Astro.props;

//Define your styling (Tailwind classes, applies to all buttons)
const buttonStyling = "border-2 px-16 py-4";

//Define your styling (Tailwind classes), applies to the different buttons
const variantClasses = {
  primary: "border-black" /* border-primary-500 */,
  secondary: "border-blue-500" /* border-secondary-500 */,
};

//Define your styling (Tailwind classes), applies to the different sizes.
const sizeClasses = {
  large: "text-4xl",
  medium: "text-xl",
  small: "text-large",
};
---

<!--Set classes for the button in question using Astro's class:list -->
<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>
