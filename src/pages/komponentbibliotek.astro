---
import MainLayout from "../layouts/MainLayout.astro";
import Link from "../components/Link.astro";
import Button from "../components/Button.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
---

<MainLayout title="Titel">
  <main class="container mx-auto p-4 font-p bg-white">
    <h1>Components</h1>
    <p>Here are my components.</p>
    <hr class="my-4" />

    <!-- Link komponent instances -->
    <section class="bg-white">
      <h2 class="font-p text-2xl">Links</h2>
      <p class="my-4"><Link href="#">Default link: </Link>should work like this<Link href="#">link</Link> in a paragraph.</p>
    </section>
    <p class="my-4"><Link href="#" variant="primary">Link variant: primary</Link></p>
  </main>

  <!-- finish with Link komponent instances -->
  <hr class="my-4" />

  <!-- Buttons komponent instances -->
  <section class="bg-white p-19">
    <h2 class="font-p text-2xl">Buttons</h2>
    <p class="my-4"><Button>Default button</Button></p>
    <p class="my-4"><Button variant="primary">Button variant: primary</Button></p>
  </section>
  <!-- finish with Buttons komponent instances -->
</MainLayout>
