---
import MainLayout from "../layouts/MainLayout.astro";
import Link from "../components/Link.astro";
import Button from "../components/Button.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
---

<MainLayout title="Titel">
  <main class="container mx-auto p-4 font-p bg-primary-pink">
    <h1>Komponentbibliotek</h1>
    <p>Her kan du finde alle de komponenter, der er brugt i dette projekt.</p>
    <hr class="my-4" />

    <!-- Link komponent instances -->
    <section class="bg-primary-pink">
      <h2 class="font-p text-2xl">Links</h2>
      <p class="my-4"><Link href="#">Default link: </Link>Default linket er en del af en tekst, og burde gerne fungere som et <Link href="#">link</Link> i en paragraf.</p>
    </section>
    <p class="my-4"><Link href="#" variant="primary">Link variant: primary</Link></p>
  </main>

  <!-- finish with Link komponent instances -->
  <hr class="my-4" />

  <!-- Buttons komponent instances -->
  <section class="bg-primary-pink">
    <h2 class="font-p text-2xl">Buttons</h2>
    <p class="my-4"><Button>Default knap</Button></p>
    <p class="my-4"><Button variant="primary">Button variant: primary</Button></p>
  </section>
  <!-- finish with Buttons komponent instances -->
</MainLayout>
